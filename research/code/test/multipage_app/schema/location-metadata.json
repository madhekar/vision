{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Location Metadata",
    "description": "A Static Metadata of Locations",
    "type": "object",
    "properties": {
        "id": {
            "description": "The unique identifier for a Location",
            "type": "integer"
        },
        "name": {
            "description": "Name of the location",
            "type": "string"
        },
        "desc": {
            "type": "string",
            "description": "A Location description"
        },
        "lat": {
           "type": "number",
            "description": "A Location latitude"
        },
        "lon": {
            "type": "number",
            "description": "A Location longitude"
        }
    },
    "required": [
        "id",
        "name",
        "lat",
        "lon"
    ]
}