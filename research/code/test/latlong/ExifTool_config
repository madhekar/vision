# .ExifTool_config

%Image::ExifTool::UserDefined = (
    'Image::ExifTool::XMP::Main' => {
        # Add our custom namespace to the main XMP table
        MyCustomNamespace => {
            SubDirectory => {
                TagTable => 'Image::ExifTool::UserDefined::MyCustomNamespace',
            },
        },
    },
);

# Define the tags within our custom namespace
%Image::ExifTool::UserDefined::MyCustomNamespace = (
    GROUPS => { 0 => 'XMP', 1 => 'XMP-ZNamespace', 2 => 'ZCustom' },
    NAMESPACE => { 'zcustom' => 'http://ns.example.com/zcustom/1.0/' },
    WRITABLE => 'string', # Default writable type for tags in this namespace

    # Define individual custom tags
    zImgTypeTag => {
        # Default string type, no special attributes needed
    },
);

1; # Required for Perl configuration files
